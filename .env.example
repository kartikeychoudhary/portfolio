# ============================================
# Portfolio Application - Docker Configuration
# ============================================
# Copy this file to .env and customize values
# DO NOT commit .env to version control
# ============================================

# Database Configuration
# ----------------------
DB_ROOT_PASSWORD=rootroot
DB_NAME=portfolio_db
DB_USER=portfolio_user
DB_PASSWORD=portfolio_pass
DB_PORT=3307

# Backend Configuration
# ---------------------
BACKEND_PORT=8080

# JWT Configuration
# IMPORTANT: Generate a secure secret for production using:
# openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_SECURE_SECRET_USING_OPENSSL
JWT_EXPIRATION=3600000

# CORS Configuration
# Add all domains that should be allowed to access the API
# Separate multiple origins with commas (no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:80,http://localhost:4200

# Application Settings
# --------------------
ALLOW_SIGNUPS=false

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
JPA_SHOW_SQL=false
JPA_FORMAT_SQL=false

# Frontend Configuration
# ----------------------
FRONTEND_PORT=80

# ============================================
# Default Credentials (After First Startup)
# ============================================
# Username: admin
# Password: admin
#
# IMPORTANT: Change the admin password immediately after first login!
# ============================================

# Quick Start
# -----------
# 1. Copy this file: cp .env.example .env
# 2. Customize values above (especially JWT_SECRET for production)
# 3. Start services: docker-compose up -d
# 4. Access application: http://localhost
# 5. Login with admin/admin and change password
#
# Management Commands
# -------------------
# View logs: docker-compose logs -f
# Stop: docker-compose down
# Rebuild: docker-compose build
# Restart: docker-compose restart
